{% extends "layouts/base_admin.twig" %}

{% block content_admin %}

<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Lista de Produtos
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active"><a href="/admin/products">Produtos</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">

  <div class="row">
  	<div class="col-md-12">
  		<div class="box box-primary">
            
            <div class="box-header">
              <a href="{{ path_for('admin.product-create') }}" class="button is-success is-normal mb-2">Cadastrar Produto</a>
            </div>

            <div class="box-body no-padding">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th style="width: 10px">#</th>
                    <th>Nome da Produto</th>
                    <th>Pre√ßo</th>
                    <th>Largura</th>
                    <th>Altura</th>
                    <th>Comprimento</th>
                    <th>Peso</th>
                    <th style="width: 140px">&nbsp;</th>
                  </tr>
                </thead>
                <tbody>
                {% for product in products %}
                  <tr>
                    <td>{{ product.idproduct }}</td>
                    <td>{{ product.desproduct }}</td>
                    <td>{{ product.vlprice }}</td>
                    <td>{{ product.vlwidth }}</td>
                    <td>{{ product.vlheight }}</td>
                    <td>{{ product.vllength }}</td>
                    <td>{{ product.vlweight }}</td>
                    <td>
                      <a href="{{ base_url() }}/admin/product/update/{{ product.idproduct }}" class="button is-primary is-small mb-2"><i class="fa fa-edit mr-2"></i> Editar</a>
                      <a href="{{ base_url() }}/admin/product/delete?id={{ product.idproduct }}" onclick="return confirm('Deseja realmente excluir este registro?')" class="button is-danger is-small"><i class="fa fa-trash mr-2"></i> Excluir</a>
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
  	</div>
  </div>

</section>
<!-- /.content -->

{% endblock %}