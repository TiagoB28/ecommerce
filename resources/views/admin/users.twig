{% extends "layouts/base_admin.twig" %}

{% block content_admin %}



        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Lista de Usuários
            </h1>
            <ol class="breadcrumb" aria-label="breadcrumbs">
                <li><a href="{{ path_for('admin.home') }}"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="is-active"><a href="{{ path_for('admin.users') }}" aria-current="page">Usuários</a></li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">

                        <div class="box-header">
                            <a href="{{ path_for('admin.user-create') }}" class="button is-success is-normal mb-2">Cadastrar Usuário</a>
                        </div>

                        <div class="box-body no-padding">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th style="width: 180px">Nome</th>
                                    <th style="width: 140px">E-mail</th>
                                    <th style="width: 100px">Login</th>
                                    <th style="width: 40px">Admin</th>
                                    <th style="width: 160px">&nbsp;</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user_person in user_persons %}
                                    <tr>
                                        <td>{{ user_person.idperson }}</td>
                                        <td>{{ user_person.desperson }}</td>
                                        <td>{{ user_person.desemail }}</td>
                                        <td>{{ user_person.user.deslogin }}</td>
                                        <td>{% if user_person.user.inadmin == 1 %}Sim{% else %}Não{% endif %}</td>
                                        <td>
                                            <a href="{{ base_url() }}/admin/user/update/{{ user_person.idperson }}"
                                               class="button is-primary is-small"><i class="fa fa-edit mr-2"></i> Editar</a>
                                            <a href="{{ base_url() }}/admin/user/delete?id={{ user_person.idperson }}"
                                               onclick="return confirm('Deseja realmente excluir este registro?')"
                                               class="button is-danger is-small"><i class="fa fa-trash mr-2"></i> Excluir</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    {% include 'components/notifications.twig' %}
                </div>
            </div>
        </section>
        <!-- /.content -->


{% endblock %}