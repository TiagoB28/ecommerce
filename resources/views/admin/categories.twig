{% extends "layouts/base_admin.twig" %}

{% block title %}Admin - Categorias{% endblock %}

{% block content_admin %}

<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Lista de Categorias
  </h1>
  <ol class="breadcrumb" aria-label="breadcrumbs">
    <li><a href="{{ base_url() }}/admin/main"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="is-active"><a href="{{ base_url() }}/admin/categories" aria-current="page">Categorias</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">

  <div class="columns">
  	<div class="column is-full">
  		<div class="box box-primary">
            
            <div class="box-header">
              <a href="{{ path_for('admin.category-create') }}" class="btn btn-success">Cadastrar Categoria</a>
            </div>

            <div class="card-body no-padding">
              <table class="table-container is-striped">
                <thead>
                  <tr>
                    <th style="width: 10px">#</th>
                    <th>Nome da Categoria</th>
                    <th style="width: 240px">&nbsp;</th>
                  </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                  <tr>
                    <td>{{ category.idcategory }}</td>
                    <td style="width: 470px">{{ category.descategory }}</td>
                    <td>
                      <a href="{{ base_url() }}/admin/categories/products/{{ category.idcategory }}" class="button is-success is-small"><i class="fa fa-plus mr-2"></i> Produtos</a>
                      <a href="{{ base_url() }}/admin/category/update/{{ category.idcategory }}" class="button is-primary is-small"><i class="fa fa-edit mr-2"></i> Editar</a>
                      <a href="{{ base_url() }}/admin/category/delete?id={{ category.idcategory }}" onclick="return confirm('Deseja realmente excluir este registro?')" class="button is-danger is-small"><i class="fa fa-trash mr-2"></i> Excluir</a>
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
  	</div>
  </div>

</section>
<!-- /.content -->

{% endblock %}